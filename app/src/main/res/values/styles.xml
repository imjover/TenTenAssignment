<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Form Button -->
    <style name="form_button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <!-- CardView -->
    <style name="cardview_base">
        <item name="cardBackgroundColor">@color/cardView</item>
        <item name="cardCornerRadius">@dimen/margin_xsmall</item>
        <item name="cardElevation">@dimen/margin_xsmall</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>
